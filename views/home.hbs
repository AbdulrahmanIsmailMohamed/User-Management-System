<table style="
text-align: center;
width: 100%;
margin: 2px 2px;
">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Comment</th>
            <th scope="col" >Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each row}}
            <tr>
                <th scope="row" style="padding: 5px;">{{this.id}}</th>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.comment}}</td>
                <td style="padding: 10px;">
                    <a href="/" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i>
                        View</a>
                    <a href="/" type="button" class="btn btn-dark btn-small"><i class="bi bi-pencil"></i>
                        Edit</a>
                    <a href="/" type="button" class="btn btn-dark btn-small"><i class="bi bi-person-x"></i>
                        Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>