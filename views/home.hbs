<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home /</a></li>
    </ol>
</nav>

<div class="row">
    <div class="col-6">
        <h1>Users</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-dark align-self-center">+ add user</a>
    </div>
</div>

<table class="table" style="text-align: center;">
    <thead>
        <tr>
            <hr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Comment</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each row}}
        <tr>
            <th scope="row" style="padding: 5px;">{{this.id}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.comment}}</td>
            <td style=" width: 20%;">
                <a href="/viewuser/{{this.id}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i>
                    View</a>
                <a href="/updateuser/{{this.id}}" type="button" class="btn btn-dark btn-small"><i
                        class="bi bi-pencil"></i>
                    Edit</a>
                <a href="/{{this.id}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-person-x"></i>
                    Hide</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>